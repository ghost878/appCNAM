<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginTop="-10dp"

            app:srcCompat="@drawable/header" />

        <LinearLayout
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="-10dp"
            android:background="#c1002a"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:onClick="viewHome"
                app:srcCompat="@drawable/home" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="34dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:onClick="mail"
                app:srcCompat="@drawable/enveloppe" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:onClick="viewUserInfo"
                app:srcCompat="@drawable/user" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:onClick="logout"
                app:srcCompat="@drawable/logout" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/planningLayout"
                    android:layout_width="match_parent"
                    android:layout_height="569dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="173dp"
                            android:layout_height="wrap_content"
                            android:textSize="30sp"
                            android:textColor="@android:color/black"
                            android:text="Planning" />

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="139dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:textColor="@android:color/black"
                            android:text="Cette semaine" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/homeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="569dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hello"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="TextView" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="140dp"
                        android:layout_height="22dp"
                        android:layout_margin="20dp"
                        app:srcCompat="@drawable/mes_services" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="178dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView18"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_margin="10dp"

                                android:layout_weight="1"
                                android:onClick="viewPlanning"
                                app:srcCompat="@drawable/planning" />

                            <ImageView
                                android:id="@+id/imageView15"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:onClick="viewCursus"
                                app:srcCompat="@drawable/cursus" />

                            <ImageView
                                android:id="@+id/imageView17"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:onClick="viewExamen"
                                app:srcCompat="@drawable/examen" />

                        </LinearLayout>
                    </HorizontalScrollView>

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="206dp"
                        android:layout_height="24dp"
                        android:layout_margin="20dp"
                        app:srcCompat="@drawable/mes_enseignements" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="165dp">

                        <LinearLayout
                            android:id="@+id/enseignements"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" />
                    </HorizontalScrollView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/infoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/moodleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="570dp"
                    android:layout_margin="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/moodleInfo1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/moodleInfo2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/moodleInfo3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="TextView" />

                    <LinearLayout
                        android:id="@+id/cadreFichiers"
                        android:layout_width="match_parent"
                        android:layout_height="382dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/fichiers"
                        android:orientation="vertical" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cursusLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:id="@+id/examenLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"></LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>